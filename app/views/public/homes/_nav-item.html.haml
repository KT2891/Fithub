%li.navigation-menu-item
  - if item[:type] == "link"
    = link_to item[:path], method: item[:method] || nil, class: "navigation-menu-button #{item[:class]}" do
      = item[:text]
  - elsif item[:type] == "pop_up"
    %span.navigation-menu-button{class: item[:class], "data-toggle": item[:toggle], "data-target": item[:target]}
      = item[:text]