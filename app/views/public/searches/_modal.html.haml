= form_with url: searches_path, method: :get do |f|
  .modal.fade.searchForm{ tabindex: "-1", role: "dialog", 'aria-labelledby': "searchLabel", 'aria-hidden': "true" }
    .modal-dialog.modal-dialog-centered{ role: "document" }
      .modal-content
        .modal-header
          %h5.modal-title#requestLabel
            = "検索"
          %button.close{ type: "button", 'data-dismiss': "modal", 'aria-label': "Close" }
            %span{ 'aria-hidden': "true" } &times;
        .modal-body.justify-content-center
          - if user_signed_in?
            = f.hidden_field :user_id, value: current_user.id
          .row.my-3
            = f.select :category, search_target, {}, class: "col-4 offset-2"
          .row.my-3
            = f.text_field :word, class: "col-8 mx-auto", placeholder: "検索ワードを入力してください"
        .modal-footer
          %button.btn.btn-secondary{ type: "button", 'data-dismiss': "modal" } Close
          = f.submit "検索", class: "btn btn-primary"
