- if post.favorited_by?(current_user)
  = link_to post_favorite_path(post), method: :delete, remote: true, class: "text-danger col-10 mx-auto" do
    %span.fa-solid.fa-heart
    = post.favorites.count
- else
  = link_to post_favorite_path(post), method: :post, remote: true, class: "text-dark col-10 mx-auto" do
    %span.fa-regular.fa-heart
    = post.favorites.count