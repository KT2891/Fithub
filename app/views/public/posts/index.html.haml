.container
  .row
    .col-3
      = render "layouts/sidebar"
    .posts__main.col-9.mb-5#post
      - unless admin_signed_in?
        = render "public/posts/form", post: @post
      .posts_show
        = render partial: "public/posts/show_post", collection: @posts, locals: { comment: @comment}
      = paginate @posts