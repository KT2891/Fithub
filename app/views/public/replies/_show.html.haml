.row.my-1
  = link_to user_path(reply.user), class: "col-4" do
    = image_tag reply.user.get_profile_image(30,30), class: "rounded-circle"
    = reply.user.name
  %p.reply__wrap-body.col-5
    = reply.body
  = link_to t("destroy"), post_comment_reply_path(reply.parent.post, reply.parent, reply), method: :delete, remote: true, class: "offset-1 content-end btn btn-sm btn-danger mb-auto"